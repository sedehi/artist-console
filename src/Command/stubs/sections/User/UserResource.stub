<?php

namespace App\Http\Controllers\User;

use App\Http\Controllers\User\Controllers\Admin\AdminController;
use Sedehi\Artist\Menu;
use Sedehi\Artist\Resource;

class UserResource extends Resource
{

    public function menu()
    {
        return [
            Menu::make()
                ->title(__('admin.admins_list'))
                ->permission('user.admincontroller.index')
                ->url(action([AdminController::class,'index'])),
        ];
    }

    public function roles()
    {
        return [
            'user' => [
                'title'  => trans('admin.admins_list'),
                'access' => [
                    'AdminController'           => [
                        trans('admin.admins_list')                       => 'index',
                        trans('admin.create').' '.trans('admin.manager') => ['create', 'store'],
                        trans('admin.edit').' '.trans('admin.manager')   => ['edit', 'update'],
                        trans('admin.delete').' '.trans('admin.manager') => 'destroy',
                    ],
                ],
            ],
        ];
    }
}
